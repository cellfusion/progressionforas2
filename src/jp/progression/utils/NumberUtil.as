/** * @author Mk-10:cellfusion */class jp.progression.utils.NumberUtil {	/**	 * 数値を 1000 桁ごとにカンマをつけて返します	 */	public static function format(number:Number):String	{		var words:Array = String(number).split("");		words.reverse();				var l:Number = words.length;		for (var i:Number = 3; i < l; i += 3) {			if (words[i]) {				words.splice(i, 1, ",");				i++;				l++;			}		}				words.reverse();		return words.join("");	}	/**	 * 数値の桁数を 0 で揃えて返します	 */	public static function digit(number:Number, figure:Number):String	{		var str:String = String(number);		for (var i:Number = 0; i < figure; i++) {			str = "0" + str;		}		return str.substr(str.length - figure, str.length);	}}